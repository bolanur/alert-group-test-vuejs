    padding-right: 50px;
    position: relative;
    text-overflow: ellipsis;
    span.fa {
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      transition: opacity .3s;
      &.fa-angle-up {
        opacity: 0;
      }
    }
    &.is-active {
      span.fa {
        &.fa-angle-up {
